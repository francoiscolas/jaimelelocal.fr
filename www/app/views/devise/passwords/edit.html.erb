<% content_for :head do %>
  <title>Nouveau mot de passe - Cestlocal.fr</title>
<% end %>

<div class="content row">
  <div class="small-12 medium-10 medium-centered large-5 columns">
    <div class="box">
      <h2>Modifier mon mot de passe</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div>
          <%= f.label :password, "Nouveau mot de passe" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
          <% if resource.errors[:password].any? %>
            <p class="field_error_message"><%= resource.errors[:password][0] %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Nouveau mot de passe (confirmation)" %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <% if resource.errors[:password_confirmation].any? %>
            <p class="field_error_message"><%= resource.errors[:password_confirmation][0] %></p>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "Changer mon mot de passe", class: "button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
