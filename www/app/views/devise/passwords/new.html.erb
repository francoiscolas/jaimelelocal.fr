<% content_for :head do %>
  <title>Nouveau mot de passe - Cestlocal.fr</title>
<% end %>

<div class="content row">
  <div class="small-12 medium-10 medium-centered large-5 columns">
    <div class="box">
      <h2>Vous voulez un nouveau mot de passe ?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <div>
          <p>Merci de saisir votre e-mail. Nous vous enverrons un lien qui vous permettra de changer de mot de passe.</p>
          <%= f.email_field :email, autofocus: true %>
          <% if resource.errors[:email].any? %>
            <p class="field_error_message"><%= resource.errors[:email][0] %></p>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "Valider", class: "hollow button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
