<% content_for :title do "Connexion - " end %>
<div class="container">
  <div class="columns">
    <div class="column col-sm-12 col-md-8 col-5 col-mx-auto">
      <div class="box">
        <h2>Connexion</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-input', autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'form-label'  %>
            <%= f.password_field :password, class: 'form-input', autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "Connexion", class: "btn" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
