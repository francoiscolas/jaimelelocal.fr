<% content_for :title do "Inscription - " end %>
<div class="container">
  <div class="columns">
    <div class="column col-sm-12 col-md-8 col-5 col-mx-auto">
      <div class="box">
        <h2>Inscription</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'form-label'  %>
            <%= f.text_field :name, required: true, autofocus: true, class: 'form-input' %>
            <% if resource.errors[:name].any? %>
              <p class="field_error_message"><%= resource.errors[:name][0] %></p>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'form-label'  %>
            <%= f.email_field :email, required: true, class: 'form-input' %>
            <% if resource.errors[:email].any? %>
              <p class="field_error_message"><%= resource.errors[:email][0] %></p>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'form-label'  %>
            <%= f.password_field :password, required: true, autocomplete: "off", class: 'form-input' %>
            <% if resource.errors[:password].any? %>
              <p class="field_error_message"><%= resource.errors[:password][0] %></p>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'form-label'  %>
            <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: 'form-input' %>
            <% if resource.errors[:password_confirmation].any? %>
              <p class="field_error_message"><%= resource.errors[:password_confirmation][0] %></p>
            <% end %>
          </div>
          <div class="actions">
            <%= f.submit "CrÃ©er mon compte", class: "btn" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
