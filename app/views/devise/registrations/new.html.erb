<% content_for :title do "Inscription - " end %>

<div class="content row">
  <div class="small-12 medium-8 medium-centered large-5 columns">
    <div class="box">
      <h2>Inscription</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
          <% if resource.errors[:email].any? %>
            <p class="field_error_message"><%= resource.errors[:email][0] %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if resource.errors[:password].any? %>
            <p class="field_error_message"><%= resource.errors[:password][0] %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <% if resource.errors[:password_confirmation].any? %>
            <p class="field_error_message"><%= resource.errors[:password_confirmation][0] %></p>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "CrÃ©er mon compte", class: "button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
